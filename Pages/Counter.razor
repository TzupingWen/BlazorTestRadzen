@page "/counter"
@page "/counter/{ExId}"

<PageTitle>Counter</PageTitle>


@if (ExId != 0)
{
    <RadzenButton Text="@text" Click="@ClickButton" Style="@($"background-color: {bgColor}")"></RadzenButton>
}
else
{
    <h1>Counter</h1>

    <p role="status">Current count: @currentCount</p>

    <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
}

@code {
    [Parameter] public int ExId { get; set; }

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }


    private string text = "Hi";
    private string bgColor = "#3480E1";

    private void ClickButton()
    {
        text = "Hello";
        bgColor = "#AE2723";
    }
}
